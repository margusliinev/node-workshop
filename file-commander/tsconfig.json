{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "Node",
        "target": "ES2022",
        "module": "ES2022",
        "outDir": "dist"
    },
    "exclude": ["node_modules"]
}
